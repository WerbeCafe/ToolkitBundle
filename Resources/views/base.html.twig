<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}{% endblock %}</title>

    <meta name="description" content="{% block meta_description %}index, follow{% endblock %}"/>
    <meta name="robots" content="{% block meta_robots %}index, follow{% endblock %}"/>

    {% block stylesheets %}{% endblock %}

    {% block javascripts %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="{{ asset('js/jquery.js') }}"><\/script>')</script>
    {% endblock %}

    <link rel="icon" type="image/x-icon" href="{% block favicon %}{{ asset('favicon.ico') }}{% endblock %}"/>
</head>
<body>
{% block body %}{% endblock %}
</body>
</html>
